<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/saveRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save record" />

        <EditText
            android:id="@+id/newData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/uploadData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload data" />

        <Button
            android:id="@+id/downloadData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download data" />

        <Button
            android:id="@+id/pingFirstServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ping FirstServer" />
        <Button
            android:id="@+id/pingSecondServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ping SecondServer" />
    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Status" />

</androidx.constraintlayout.widget.ConstraintLayout>